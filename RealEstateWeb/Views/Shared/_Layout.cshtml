<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstateWeb.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body class="d-flex flex-column">
    <nav class="navbar navbar-expand-lg bg-success mb-3">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Listing" asp-action="Index">ASP Nekretnine</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Listing" asp-action="Index">Oglasi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Listing" asp-action="Search">Pretraga</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-bold text-light" asp-area="" asp-controller="Listing" asp-action="Create">Postavka</a>
                </li>
            </ul>
        </div>
    </nav>
    <main role="main" class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-success flex-shrink-0">
        <p class="text-light">Igor Arnautović 243m/23</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
